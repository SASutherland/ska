      <a class="nav-link <%= 'active' if controller_name == 'dashboards' && action_name == 'index' %>" href="<%= dashboard_path %>">Dashboard</a>
    </li>

    <!-- Manage Users (Admin only) -->
    <% if current_user.admin? %>
      <li class="nav-item">
        <a class="nav-link <%= 'active' if controller_name == 'dashboards' && action_name == 'manage_users' %>" href="<%= dashboard_manage_users_path %>">Gebruikers</a>
      </li>
    <% end %>

    <!-- My Courses (Student) -->
    <% if current_user.student? %>

<div class="sidebar">
  <ul class="nav flex-column">
    <% sidebar_links.each do |link| %>
      <% if link[:roles].nil? || link[:roles].include?(current_user.role.to_sym) %>
        <li class="nav-item"><%= nav_link(link[:name], link[:path], controller: link[:controller], action: link[:action]) %></li>
      <% end %>
    <% end %>
  </ul>
</div>

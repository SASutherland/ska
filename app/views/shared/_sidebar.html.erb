<div class="sidebar">
  <ul class="nav flex-column">
    <!-- Dashboard Link -->
    <li class="nav-item">
      <a class="nav-link <%= 'active' if controller_name == 'dashboards' && action_name == 'index' %>" href="<%= dashboard_path %>">Dashboard</a>
    </li>

    <!-- Manage Users (Admin only) -->
    <% if current_user.admin? %>
      <li class="nav-item">
        <a class="nav-link <%= 'active' if controller_name == 'dashboards' && action_name == 'manage_users' %>" href="<%= dashboard_manage_users_path %>">Manage Users</a>
      </li>
    <% end %>

    <!-- My Courses (Student) -->
    <% if current_user.student? %>
      <li class="nav-item">
        <a class="nav-link <%= 'active' if controller_name == 'courses' && action_name == 'index' %>" href="<%= courses_path %>">My Courses</a>
      </li>
    <% end %>

    <!-- Teachers and Admin Section -->
    <% if current_user.teacher? || current_user.admin? %>
      <li class="nav-item">
        <a class="nav-link <%= 'active' if controller_name == 'dashboards' && action_name == 'my_groups' %>" href="<%= dashboard_my_groups_path %>">Mijn Groepen</a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= 'active' if controller_name == 'groups' && action_name == 'new' %>" href="<%= new_group_path %>">Create Group</a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= 'active' if controller_name == 'courses' && action_name == 'my_courses' %>" href="<%= my_courses_courses_path %>">My Courses</a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= 'active' if controller_name == 'courses' && action_name == 'new' %>" href="<%= new_course_path %>">Create Course</a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= 'active' if controller_name == 'students' && action_name == 'index' %>" href="<%= students_path %>">Students List</a>
      </li>
    <% end %>

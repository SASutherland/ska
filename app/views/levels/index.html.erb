<h1></h1><div class="dashboard-container d-flex">
  <!-- Sidebar -->
  <%= render 'shared/sidebar' %>

  <!-- Main Content -->
  <div class="main-content flex-grow-1">
    <h1 class="mb-4">Niveaus</h1>

    <%= link_to "Niveau aanmaken", new_level_path, class: "btn btn-primary mb-4" %>

    <% if @levels.any? %>
      <% @levels.each do |level| %>
        <div class="card-white">
          <!-- Flex container for Group Name and Action Buttons -->
          <div class="d-flex justify-content-between align-items-center mb-3">
            <!-- Group Name -->
            <h2 class="mb-0"><%= level.name %></h2>

            <!-- Action Buttons (Edit/Delete) -->
            <div class="d-flex align-items-center">
              <!-- Edit Button -->
              <%= link_to edit_level_path(level), class: 'me-4', title: 'Niveau wijzigen' do %>
                <i class="fa-solid fa-pen-to-square icon-aligned"></i>
              <% end %>

              <!-- Delete Button -->
              <%= link_to level_path(level), method: :delete, data: { confirm: "Weet je zeker dat je dit niveau wilt verwijderen? Dit kan niet ongedaan gemaakt worden.", turbo: false }, class: 'me-2', title: 'Deze groep verwijderen' do %>
                <i class="fa-solid fa-xmark icon-aligned"></i>
              <% end %>
            </div>
          </div>

          <!-- Students Section -->
          <% if level.courses.any? %>
          <p>Cursussen in dit niveau:</p>
            <ul>
              <% level.courses.each do |course| %>
                <li>
                  <!-- Link to course -->
                  <%= link_to "#{course.title}", my_courses_courses_path, class: 'student-link' %>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p>Je hebt nog geen niveaus.</p>
    <% end %>
  </div>
</div>

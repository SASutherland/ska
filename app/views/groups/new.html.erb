<div class="dashboard-container d-flex">
  <!-- Sidebar -->
  <%= render 'shared/sidebar' %>

  <!-- Main Content -->
  <div class="main-content flex-grow-1" data-controller="add-members">
    <h1>Create a New Group</h1>

    <%= simple_form_for @group do |f| %>
      <div class="field">
        <%= f.input :name, label: "Group Name" %>
      </div>

      <div class="field">
        <%= f.label "Add Students to the Group" %>

        <%= select_tag "student", options_from_collection_for_select(User.students, "id", "full_name"), include_blank: "Select a Student", data: { action: "change->add-members#addMember" } %>

        <div id="selected-members" class="mt-3">
          <h4>Group Members:</h4>
          <ul id="members-list" data-add-members-target="list">
            <!-- Dynamically added members will appear here -->
          </ul>
        </div>
      </div>

      <%= f.submit "Create Group", class: "btn btn-primary mb-5" %>
    <% end %>
  </div>
</div>

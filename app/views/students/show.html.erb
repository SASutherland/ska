<div class="dashboard-container d-flex">
  <!-- Sidebar -->
  <%= render 'shared/sidebar' %>

  <!-- Main Content -->
  <div class="main-content flex-grow-1">
    <h1><%= @student.first_name %> <%= @student.last_name %> - Profile</h1>

    <h3>Enrolled Courses</h3>
    <% if @courses.any? %>
      <% @courses.each do |course| %>
        <div class="course-item mb-4">
          <h4><%= course.title %></h4>
          <p><%= course.description %></p>

          <!-- Progress for each course -->
          <div class="questions-progress">
            <% course.questions.each_with_index do |question, index| %>
              <% attempt = @attempts.find { |a| a.question_id == question.id } %>
              <% if attempt %>
                <span class="question-number <%= attempt.correct? ? 'correct-answer' : 'incorrect-answer' %>">
                  <%= index + 1 %>
                </span>
              <% else %>
                <span class="question-number"> <%= index + 1 %> </span>
              <% end %>
            <% end %>
          </div>
        </div>
        <hr>
      <% end %>
    <% else %>
      <p>This student is not enrolled in any courses.</p>
    <% end %>
  </div>
</div>
